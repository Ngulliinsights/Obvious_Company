{
  "name": "The Obvious Company Website",
  "description": "Strategic Intelligence Amplification website with hybrid static/dynamic architecture",
  "repository": "https://github.com/theobviouscompany/website",
  "services": [
    {
      "name": "web",
      "source": {
        "repo": "https://github.com/theobviouscompany/website",
        "branch": "main"
      },
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build"
      },
      "deploy": {
        "startCommand": "npm start",
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 300
      },
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "WEBSITE_URL": "https://${{RAILWAY_PUBLIC_DOMAIN}}",
        "SMTP_HOST": "smtp.gmail.com",
        "SMTP_PORT": "587",
        "CONTACT_EMAIL": "contact@theobviouscompany.com"
      }
    }
  ],
  "variables": {
    "SMTP_USER": {
      "description": "Gmail email address for sending emails",
      "required": true
    },
    "SMTP_PASS": {
      "description": "Gmail app password (not regular password)",
      "required": true
    },
    "SESSION_SECRET": {
      "description": "Secret key for session management",
      "generate": true
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT tokens",
      "generate": true
    },
    "WEBHOOK_SECRET": {
      "description": "Secret key for webhook validation",
      "generate": true
    }
  }
}