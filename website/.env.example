# Server Configuration
PORT=3000
NODE_ENV=production
WEBSITE_URL=https://yourdomain.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
CONTACT_EMAIL=contact@theobviouscompany.com

# Security Configuration
SESSION_SECRET=your-super-secret-session-key
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
ENCRYPTION_KEY=your-encryption-key-change-in-production
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Authentication
REQUIRE_EMAIL_VERIFICATION=true
REFRESH_TOKEN_EXPIRY=604800
MFA_ENABLED=false

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_PREVENT_REUSE=5

# Privacy & Compliance
DATA_RETENTION_DAYS=1095
ANONYMIZATION_DELAY=30
CONSENT_VALIDITY_DAYS=365
GDPR_ENABLED=true
CCPA_ENABLED=false
REGIONAL_COMPLIANCE=EU,US-CA,UK

# Data Retention
ASSESSMENT_RETENTION_DAYS=1095
ANALYTICS_RETENTION_DAYS=730
AUDIT_RETENTION_DAYS=2555
SESSION_RETENTION_DAYS=90
AUTOMATED_RETENTION=true
RETENTION_SCHEDULE=0 2 * * *
RETENTION_BATCH_SIZE=1000
RETENTION_NOTIFICATION_EMAIL=admin@theobviouscompany.com

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=assessment_platform
DB_USER=assessment_user
DB_PASSWORD=your-database-password
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Audit & Compliance
ENABLE_REAL_TIME_AUDITING=true
AUDIT_RETENTION_DAYS=2555
COMPLIANCE_REPORTING_INTERVAL=24
ALERT_THRESHOLD_FAILED_LOGINS=10
ALERT_THRESHOLD_DATA_ACCESS=100
ALERT_THRESHOLD_PRIVACY_REQUESTS=5

# Optional: Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID# Ex
ternal System Integrations
SALES_EMAIL=sales@theobviouscompany.com

# Integration Secrets
WEBHOOK_SECRET=your-webhook-secret-key
CALENDAR_WEBHOOK_SECRET=your-calendar-webhook-secret
UNSUBSCRIBE_SECRET=your-unsubscribe-secret-key

# Calendly Integration (Optional)
CALENDLY_WEBHOOK_URL=https://calendly.com/webhooks/your-webhook-url
CALENDLY_ACCESS_TOKEN=your-calendly-access-token
CALENDLY_ORGANIZATION_URI=https://api.calendly.com/organizations/your-org-id
CALENDLY_EVENT_TYPE_URI=https://api.calendly.com/event_types/your-event-type-id

# Google Calendar Integration (Optional)
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# Consultant Information
CONSULTANT_EMAIL=consultant@theobviouscompany.com