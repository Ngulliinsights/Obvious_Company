{
  "name": "obvious-company-website",
  "version": "1.0.0",
  "description": "Fast marketing website for The Obvious Company",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --ignore '../**/*.html' --ignore '../**/*.css'",
    "dev:verbose": "DETAILED_LOGGING=true nodemon server.js",
    "setup": "node ../../start-server.js",
    "build": "echo 'Server build complete'",
    "build:integrations": "cd src/integrations && tsc || echo 'TypeScript build skipped'",
    "build:css": "postcss ../css/styles.css -o ../css/styles.min.css || echo 'CSS build skipped'",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:audit": "jest src/audit/audit.test.ts --testTimeout=10000",
    "test:email": "node test-email.js",
    "health": "curl -f http://localhost:3000/api/health || echo 'Server not running'"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "http-proxy-middleware": "^2.0.6",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
