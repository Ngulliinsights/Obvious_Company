{
  "name": "ai-assessment-platform",
  "version": "1.0.0",
  "description": "AI Integration Assessment Platform for The Obvious Company",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc && vite build",
    "build:frontend": "vite build",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:frontend": "vite",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:unit": "vitest --run --reporter=verbose src/**/*.test.ts",
    "test:integration": "vitest --run --reporter=verbose src/__tests__/integration/**/*.test.ts",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --run --coverage",
    "test:performance": "vitest --run src/__tests__/performance/**/*.test.ts",
    "test:accessibility": "playwright test --grep=\"accessibility\"",
    "test:cross-browser": "playwright test src/__tests__/cross-browser/",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:accessibility",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "playwright:install": "playwright install",
    "quality:check": "node scripts/code-quality-check.js",
    "quality:performance": "node scripts/performance-check.js",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "security:audit": "npm audit --audit-level moderate",
    "db:migrate": "echo 'Database migration placeholder'",
    "test:build": "echo 'Post-build tests placeholder'",
    "test:smoke": "echo 'Smoke tests placeholder'",
    "ci:full": "npm run lint && npm run type-check && npm run test:all && npm run quality:check"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redis": "^4.6.10",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.4",
    "axe-playwright": "^1.2.3",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "msw": "^2.0.11",
    "pa11y-ci": "^3.0.1",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
